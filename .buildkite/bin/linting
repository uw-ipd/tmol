#!/bin/bash
#http://redsymbol.net/articles/unofficial-bash-strict-mode/

set -euo pipefail
IFS=$'\n\t'
set -x

set +e

source ~/.bashrc
conda activate $BUILDKITE_BUILD_ID

error=0

pre-commit install
pre-commit run --all --show-diff-on-failure
(( error |= $? ))

flake8 
(( error |= $? ))

exit $error
